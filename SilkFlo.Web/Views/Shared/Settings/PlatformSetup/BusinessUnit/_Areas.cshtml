@model List<SilkFlo.Web.Models.Business.Team>
<div name="button" id="btnNewArea" style="color:#a6a6a6; padding:10px 15px;" class="listbtn"
     onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.NewArea_Click ();">
    + Add Area
</div>
<hr style="margin: 0px;color: #5f5f5f;background-color: #5f5f5f;" />
@foreach (var team in Model)
{
    var url = "GetSubAreas/teamId/" + @team.Id;

    <div class="row" style="width:100%; margin-left: 0px; padding:0px;">
        <div class="col-11" url="@url" style="padding:10px 15px"
             column="Area"
             name="Business.Team"
             id="@team.Id"
             targetName="SubArea"
             ondblclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Dbl_Click(event);"
             onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Select_Click ( event );" >
                <div name="Business.Team.Name" role="textbox">@team.Name</div>
                <input name="NameOld" type="hidden" value="@team.Name" />
                <input name="Business.Team.Id" type="hidden" value="@team.Id" />
                <input name="Business.Team.DepartmentId" type="hidden" value="@team.DepartmentId" />
            </div>
        <div class="col-1" style="padding:10px 5px">
             <img src="~/Icons/delete.png" id="@team.Id" width="20px" onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Delete_Click ();">
         </div>
    </div>

    <hr style="margin: 0px;color: #5f5f5f;background-color: #5f5f5f;" />
