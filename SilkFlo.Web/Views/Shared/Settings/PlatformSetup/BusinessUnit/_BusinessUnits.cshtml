@model List<SilkFlo.Web.Models.Business.Department>
<div name="button" id="btnNewBusiness" style="padding:10px 15px; color:#a6a6a6" class="listbtn"
     onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.NewBusinessUnits_Click ();">
    + Add Business Unit
</div>
<hr style="margin: 0px;color: #5f5f5f;background-color: #5f5f5f;" />
@foreach (var department in Model)
{
    var url = "GetAreas/departmentId/" + @department.Id;
    <div class="row" style="width:100%; margin-left: 0px; padding:0px;">
        <div class="col-11" style="padding:10px 15px" ondblclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Dbl_Click (event);"
             onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Select_Click (event);" url="@url"
             column="BusinessUnit"
             name="Business.Department"
             id="@department.Id"
             targetName="Area">
            <div name="Business.Department.Name" role="textbox">@department.Name</div>
            <input name="NameOld" type="hidden" value="@department.Name" />
            <input name="Business.Department.Id" type="hidden" value="@department.Id" />
        </div>
        <div class="col-1" style="padding:10px 5px">
            <img src="~/Icons/delete.png" id="@department.Id" width="20px" onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Delete_Click ();">
        </div>
    </div>
    <hr style="margin: 0px;color: #5f5f5f;background-color: #5f5f5f;"/>
}




