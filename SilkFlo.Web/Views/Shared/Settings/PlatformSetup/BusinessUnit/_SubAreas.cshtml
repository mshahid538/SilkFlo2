@model List<SilkFlo.Web.Models.Business.Process>
<div name="button" style="color:#a6a6a6; padding:10px 15px;" id="btnNewSubArea" class="listbtn"
     onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.New_Click ();" >
    + Add Sub-Area
</div>
<hr style="margin: 0px;color: #5f5f5f;background-color: #5f5f5f;" />
@foreach (var process in Model)
{
   <div class="row" style="width:100%; margin-left: 0px;padding:0px;">
        <div class="col-10" column="SubArea" style="padding:10px 15px"
         name="Business.Process"
         id="@process.Id"
         ondblclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Dbl_Click(event);"
         onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Select_Click ( event );">
        <div name="Business.Process.Name" role="textbox">@process.Name</div>
        <input name="NameOld" type="hidden" value="@process.Name" />
        <input name="Business.Process.Id" type="hidden" value="@process.Id" />
        <input name="Business.Process.TeamId" type="hidden" value="@process.TeamId" />
    </div>
        <div class="col-1" style="padding:10px 5px">
    <img src="~/Icons/delete.png" id="@process.Id" width="20px" onclick="SilkFlo.ViewModels.Settings.PlatformSetup.BusinessUnits.Delete_Click ();">
        </div>
        </div>
    <hr style="margin: 0px;color: #5f5f5f;background-color: #5f5f5f;" />
}
